[Application]
name=io.github.salaniLeo.flake
runtime=org.gnome.Platform/x86_64/43
sdk=org.gnome.Sdk/x86_64/43
command=flake

[Context]
shared=ipc;
sockets=x11;wayland;fallback-x11;
filesystems=home;

[Extension io.github.salaniLeo.flake.Debug]
directory=lib/debug
autodelete=true
no-autodownload=true

[Build]
built-extensions=io.github.salaniLeo.flake.Debug;